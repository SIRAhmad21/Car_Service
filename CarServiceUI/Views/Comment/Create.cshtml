@model CarServiceBL.Models.Comment
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="CommentTitle" class="control-label"></label>
                <input asp-for="CommentTitle" class="form-control" />
                <span asp-validation-for="CommentTitle" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="CommentText" class="control-label"></label>
                <input asp-for="CommentText" class="form-control" />
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control accept="image/*" />

            </div>

            <div class="form-group row">
                <input type="submit" value="Add" class="btn btn-outline-primary" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Back </a>
            </div>
        </form>
    </div>
</div> 

    
    

