@model IEnumerable<CarServiceBL.Models.Service>
@{
    int index = 0;
    int count = 0;

} 

<div class="container-xxl service py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="text-primary text-uppercase">// Our Services //</h6>
            <h1 class="mb-5">Explore Our Services</h1>
        </div>

        <div class="row g-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="col-lg-4">



                <div class="nav w-100 nav-pills me-4" id="myTab">
                    @foreach (var item in Model)
                    {
                        index++;
                        <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4" data-bs-toggle="pill" data-bs-target="#tab-pane-@index" type="button">
                            <i class=" fa fa-car-side fa-2x me-3 " >@item.ServiecName</i>
                            <h4 class="m-0"></h4>
                        </button>
                    }
                </div>

                <script>
                    $(document).ready(function () {
                        $('#myTab button').click(function () {
                            // Remove the "active" class from all buttons
                            $('#myTab button').removeClass('active');

                            // Add the "active" class to the clicked button
                            $(this).addClass('active');
                        });
                    });
                </script>

            </div>

            <div class="col-lg-8">
                <div class="tab-content w-100">
                    @foreach (var item in Model)
                    {
                        count++;
                        @if (count == 1)
                        {
                            <div class="tab-pane fade show active" id="tab-pane-@count">
                                <div class="row g-4">
                                    <div class="col-md-6" style="min-height: 350px;">
                                        <div class="position-relative h-100">
                                            <img class="position-absolute img-fluid w-100 h-100" src="~/img/@item.ImagePath" style="object-fit: cover;" alt="">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h3 class="mb-3">15 Years Of Experience In Auto Servicing</h3>
                                        <p class="mb-4">@item.ServiceDescription</p>
                                        <p><i class="fa fa-check text-success me-3"></i>Quality Servicing</p>
                                        <p><i class="fa fa-check text-success me-3"></i>Expert Workers</p>
                                        <p><i class="fa fa-check text-success me-3"></i>Modern Equipment</p>
                                       
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="tab-pane fade" id="tab-pane-@count">
                                <div class="row g-4">
                                    <div class="col-md-6" style="min-height: 350px;">
                                        <div class="position-relative h-100">
                                            <img class="position-absolute img-fluid w-100 h-100" src="~/img/@item.ImagePath" style="object-fit: cover;" alt="">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h3 class="mb-3">15 Years Of Experience In Auto Servicing</h3>
                                        <p class="mb-4">@item.ServiceDescription</p>
                                        <p><i class="fa fa-check text-success me-3"></i>Quality Servicing</p>
                                        <p><i class="fa fa-check text-success me-3"></i>Expert Workers</p>
                                        <p><i class="fa fa-check text-success me-3"></i>Modern Equipment</p>
                                        
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
</div> 
