@model CarServiceBL.Models.Service

@{
    ViewData["Title"] = "Create";
}

<h2>Create Service</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
          
            <div class="form-group row">
                <label asp-for="ServiecName" class="control-label"></label>
                <input asp-for="ServiecName" class="form-control" />
                <span asp-validation-for="ServiecName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ServiceDescription" class="control-label"></label>
                <input asp-for="ServiceDescription" class="form-control" />
                <span asp-validation-for="ServiceDescription" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control accept="image/*" />

            </div>

            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-secondary" />
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>


