@model CarServiceBL.Models.Prodect

@{
    ViewData["Title"] = "Create";
}

<h2>Create Prodect</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="ProdectName" class="control-label"></label>
                <input asp-for="ProdectName" class="form-control" />
                <span asp-validation-for="ProdectName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProdectDescription" class="control-label"></label>
                <input asp-for="ProdectDescription" class="form-control" />
                <span asp-validation-for="ProdectDescription" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
         

            <div class="form-group row">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control accept="image/*" />

            </div>

            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-warning">Back </a>
            </div>
        </form>
    </div>
</div>

